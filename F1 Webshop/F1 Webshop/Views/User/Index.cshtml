@model UserViewModel

<form method="post">
    <div class="form-group">
        <label for="Email"></label>
        <input asp-for="Email" type="text" class="form-control" id="Email" name="Email" placeholder="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input asp-for="password" type="text" class="form-control" id="password"  placeholder="Enter Password">
        <span asp-validation-for="password"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>