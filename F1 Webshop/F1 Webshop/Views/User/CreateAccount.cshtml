@model UserViewModel
<h1>Create Account</h1>
<br />
<form method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" type="text" class="form-control" id="Email" name="Email" placeholder="Email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" placeholder="Enter Name">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input asp-for="password" type="text" class="form-control" id="password" placeholder="Enter Password">
        <span asp-validation-for="password"></span>
    </div>
    <button asp-controller="User" asp-action="CreateAccount" type="submit" class="btn btn-primary">Submit</button>
</form>